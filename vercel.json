{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/send-sms.js": {
      "maxDuration": 30
    },
    "api/save-user.js": {
      "maxDuration": 10
    }
  }
}
